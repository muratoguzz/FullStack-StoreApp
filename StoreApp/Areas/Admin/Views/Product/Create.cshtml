@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    @* enctype="multipart/form-data" bu ifade olmazsa dosyalama işlemi yaparken hata olur *@

    <div class="text-danger" asp-validation-summary="All"></div> @* validation *@

    <div class="form-group my-3">       
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories"  asp-for="CategoryId">
        </select>
    <div/>
     
    <div class="form-group my-3">
         <label asp-for="ProductName"></label>
         <input asp-for="ProductName" class="form-control" />
    </div>

     <div class="form-group my-3">
         <label asp-for="Stock"></label>
         <input asp-for="Stock" class="form-control" />
     </div>

    <div class="form-group my-3">
         <label asp-for="Summary"></label>
         <input asp-for="Summary" class="form-control" />
    </div> 

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

     <div class="form-group my-3">
         <label asp-for="ImageUrl"></label>
         <input name="file" type="file" class="form-control" /> @* burda asp-for yerine name="file" kullandık *@
     </div>

    <div class="form-group my-3">
        <div class="btn btn-group">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-outline-primary">Products</a>
        </div>
    </div>
</form>
