@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            Create        
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image Url</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product prd in Model)
            {
                <tr>
                    <td>@prd.ProductId</td>
                    <td>
                        <img class="border border-dark" src="@prd?.ImageUrl" alt="@prd.ProductName" width="50"/>
                    </td>
                    <td>@prd.ProductName</td>
                    <td>@prd.Price.ToString("c")</td>
                    <td>@prd.Stock</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@prd.ProductId">
                                Edit
                            </a>
                            <a class="btn btn-info" target ="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.ProductId">
                                Web
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prd.ProductId">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
