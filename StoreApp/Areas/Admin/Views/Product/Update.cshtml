@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Edit</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div> @* validation *@

    <input type="hidden" asp-for="ProductId"/>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
            <option value="">-- Select a category --</option>
        </select>
    <div />

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

     <div class="form-group my-3">
         <label asp-for="Stock"></label>
         <input asp-for="Stock" class="form-control" />
     </div>

     <div class="form-group my-3">
         <label asp-for="Summary"></label>
         <input asp-for="Summary" class="form-control" />
     </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl" />
    </div>

     <div class="form-group my-3">
         <label asp-for="ImageUrl"></label>
         <input name="file" type="file" class="form-control" /> @* burda asp-for yerine name="file" kullandık *@
     </div>

    <div class="form-group my-3">
        <div class="btn btn-group">
            <button class="btn btn-primary" type="submit">Update</button>
            <a asp-action="Index" class="btn btn-outline-primary">Products</a>
        </div>
    </div>
</form>

